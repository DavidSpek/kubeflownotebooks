{
  "extends": [
    "config:base",
    ":dependencyDashboard",
    ":prHourlyLimitNone"
  ],
  "schedule": [
    "before 11pm"
  ],
  "packageRules": [
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "major"
      ],
      "enabled": true
    },
    {
      "description": "Group Conda and Miniforge",
      "matchPackagePatterns": ["^conda[^\\s]+?[a-z-].*"],
      "groupName": "conda",
      "additionalBranchPrefix": ""
    }
  ],
  "regexManagers": [
    {
      "fileMatch": [
        "(^|/|\\.)Dockerfile$",
        "(^|/)Dockerfile\\.[^/]*$"
      ],
      "matchStrings": [
        "# renovate: datasource=(?<datasource>[a-z-]+?) depName=(?<depName>[^\\s]+?)(?: lookupName=(?<lookupName>[^\\s]+?))?(?: versioning=(?<versioning>[a-z-]+?))?\\s(?:ENV|ARG) .+?_VERSION=(?<currentValue>.*)?"
      ]
    },
    {
      "fileMatch": [
        "^requirements[-]*[^\\s]*?\\.txt"
      ],
      "datasourceTemplate": "pypi"
    }
  ]
}
